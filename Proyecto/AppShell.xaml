<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Proyecto.Views"
    x:Class="Proyecto.AppShell">

    <FlyoutItem Title="Menu Principal" Icon="menu.png">
        <ShellContent Route="MainMenuPage" ContentTemplate="{DataTemplate views:MainMenuPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Iniciar Sesion" Icon="login.png">
        <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Usuarios" Icon="users.png">
        <ShellContent Route="UsuariosPage" ContentTemplate="{DataTemplate views:UsuariosPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Portapapeles" Icon="clipboard.png">
        <ShellContent Route="ClipboardPage" ContentTemplate="{DataTemplate views:ClipboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Acelerometro" Icon="sensor.png">
        <ShellContent Route="AccelerometerPage" ContentTemplate="{DataTemplate views:AccelerometerPage}" />
    </FlyoutItem>


</Shell>

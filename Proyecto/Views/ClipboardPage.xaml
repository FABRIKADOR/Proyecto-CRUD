<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.Views.ClipboardPage"
             Title="Portapapeles">
    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#FFFFFF">
        <Entry x:Name="TextInput" Placeholder="Escribe algo..." />
        <Button Text="Copiar" Clicked="OnCopyClicked"/>
        <Button Text="Pegar" Clicked="OnPasteClicked"/>
        <Label x:Name="OutputLabel" Text="Resultado..." FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
